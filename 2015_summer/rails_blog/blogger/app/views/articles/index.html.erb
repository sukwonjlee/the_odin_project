<h1>All Articles!!</h1>

<ul id="articles">
	<% @articles.each do |article| %>
		<li>
			<!-- <p><%= article.title %></p> -->
			<p><%= link_to article.title, article_path(article.id), class: "article_title", id: "article_#{article.id}" %></p>
		</li>
	<% end %>
</ul>

<%= link_to "Create a New Article", new_article_path, class: "new_article" %>